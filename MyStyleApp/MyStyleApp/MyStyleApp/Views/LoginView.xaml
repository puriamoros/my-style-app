<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStyleApp.Views.LoginView"
             Padding="{StaticResource PagePadding}">
  <StackLayout>
    <Label
      Text="{Binding [welcome], Source={StaticResource LocalizedStrings}}"
      VerticalOptions="Center"
      HorizontalOptions="Center"
      Style="{StaticResource LargeTextStyle1}"
      TextColor="{StaticResource TitleColor}" />
    <Button
      Text="{Binding [hello], Source={StaticResource LocalizedStrings}}"
      Command="{Binding NextViewCommand}" />
    <Button
      Text="Add appointment"
      Command="{Binding AddAppointmentCommand}" />
  </StackLayout>
</ContentPage>