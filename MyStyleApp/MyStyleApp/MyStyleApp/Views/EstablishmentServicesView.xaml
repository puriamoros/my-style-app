<?xml version="1.0" encoding="utf-8" ?>
<views:CustomContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyStyleApp.Views.EstablishmentServicesView"
             xmlns:views="clr-namespace:MyStyleApp.Views"
             Padding="{StaticResource PagePadding}">

  <StackLayout>
    <ListView x:Name="GroupedView" ItemsSource="{Binding GroupedServiceList}"
      HasUnevenRows="True"
      GroupDisplayBinding="{Binding Key}"
      GroupShortNameBinding="{Binding ShortKey}"
      IsGroupingEnabled="True">

      <ListView.GroupHeaderTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Key}"/>
        </DataTemplate>
      </ListView.GroupHeaderTemplate>

      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <RelativeLayout Padding="0,20,0,0">
              <Switch x:Name="ServiceSwitch"
                HorizontalOptions="Start"
                IsToggled="{Binding Selected}"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.25}"/>
              <StackLayout
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.25}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.55}">
                <Label VerticalOptions="Center" Text="{Binding Name}" Style="{StaticResource SmallTextStyle}" SizeChanged="OnLabelSizeChanged"/>
              </StackLayout>

              <Entry
                Placeholder="{Binding LocalizedStrings[price]}"
                Text="{Binding Price}"
                HorizontalTextAlignment="End"
                Keyboard="Numeric"
                IsVisible="{Binding Source={x:Reference ServiceSwitch}, Path=IsToggled}"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.8}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.15}"/>
              <Label Text=" €"  Style="{StaticResource MediumTextStyle}"
                IsVisible="{Binding Source={x:Reference ServiceSwitch}, Path=IsToggled}"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.95}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.5}"/>

            </RelativeLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>

</views:CustomContentPage>